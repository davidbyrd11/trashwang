{namespace templates.users autoescape="contextual"}

/**
 * Selfie Signup
 */
{template .signup}
<div class="content signup">
  <div id="animatedArea">
    <div class="content-padded">
      <div class="headline">
        <h1>TR▲SH W▲NG</h1>
        <form action="/users" enctype="multipart/form-data" method="post">
          <div class="input-group">
            <input type="text" name="name" placeholder="ur name">
            <input type="email" name="email" placeholder="ur email">
            <input type="password" name="password" placeholder="ur pw">
            <input class="camera-input" type="file" accept="image/png" capture="camera" name="picture" style="display: none">
          </div>
          <button class="button-negative button-block" type="submit" style="display:none" id="new-user-submit"></button>
          <button data-action="open-camera" class="button-main button-block">sign in with a selfie</button>
        </form>
        <div class="login">
          <a href="/login">Already have an account?</a>
        </div>
      </div>
    </div>
  </div>
</div>
{/template}

/**
 * login
 */
{template .login}
<div class="content signup">
  <div id="animatedArea">
    <div class="content-padded">
      <div class="headline">
        <h1>TR▲SH W▲NG</h1>
        <form action="/login" enctype="multipart/form-data" method="post">
          <div class="input-group">
            <input type="password" name="email" placeholder="email">
            <input type="password" name="password" placeholder="password">
          </div>
          <button class="button-negative button-block" type="submit" id="user-login">Let's Party &rarr;</button>
        </form>
    </div>
  </div>
</div>
{/template}
